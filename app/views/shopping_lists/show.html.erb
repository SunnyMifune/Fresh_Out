<h1 class="text-center mt-3">Shopping List</h1>
<% @items.each do |item| %>
  <div class="card-product mt-3">
    <%= cl_image_tag item.food.photo.key, alt: "text" %>
    <div class="card-product-infos">
      <h2><%= item.food.name.capitalize %></h2>
      <div class="d-flex ">
        <%= render 'house_foods/form', item: item, house_food: @house_food %>
        <%= render 'destroy_item', item: item %>
      </div>
    </div>
  </div>
<% end %>
