<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to house_foods_path, class: "nav-link nav-icon list_number" do %>
      <i class="fa-solid fa-box"></i>
    <% end %>
    <%= link_to root_path, class: "navbar-brand navbar-shopping-list-link" do %>
      <i class="fa-solid fa-plus"></i>
    <% end %>
    <% if user_signed_in? %>
      <% if @unseen_items != nil  %>
        <% if @unseen_items.any? %>
          <%=  link_to  shopping_list_path(current_user.house.shopping_lists.first), class: 'navbar-shopping-list-link-red', style: 'font-size: 32px;' do %>
            <i class="fa-solid fa-basket-shopping"><span class="list_number"><%= current_user.house.shopping_lists.first.items.count %></span></i>
          <% end %>
        <% else %>
          <%=  link_to  shopping_list_path(current_user.house.shopping_lists.first), class: 'navbar-shopping-list-link', style: 'font-size: 32px;' do %>
            <i class="fa-solid fa-basket-shopping"> <span class="list_number"><%= current_user.house.shopping_lists.first.items.count %></span>  </i>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <div class="collapse navbar-collapse ms-3" id="navbarSupportedContent">
    <ul class="navbar-nav me-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "Inventory", house_foods_path, class: "nav-link" %>
        </li>
